{
    "name": "tomverran/robots-txt-checker",
    "type": "library",
    "description": "Given a robots.txt file, user agent and URL path will tell you whether you're allowed to access a page",
    "keywords": ["crawler", "robots.txt"],
    "homepage": "https://carefulcoder.co.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Verran",
            "homepage": "https://carefulcoder.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">= 7.0",
        "vimeo/psalm": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "tomverran\\Robot\\": "src/Robot/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tomverran\\Robot\\": ["src/Robot/", "tests/"]
        }
    }
}
